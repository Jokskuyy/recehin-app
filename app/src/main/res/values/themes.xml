<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Recehin" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Warna Utama -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorBackground</item>

        <!-- Warna Sekunder -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorBackground</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>

        <!-- Teks -->
        <item name="colorOnBackground">@color/colorTextPrimary</item>
        <item name="colorOnSurface">@color/colorTextPrimary</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>

        <!-- Aksen dan Error -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>

        <!-- Komponen Material -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

</resources>
