<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/padding_medium">

        <ImageButton
            android:id="@+id/btnKembali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Kembali"/>

        <TextView
            style="@style/RecehinTitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/padding_medium"
            android:text="@string/title_pengaturan"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preferensi Umum"
        android:textStyle="bold"
        android:textSize="@dimen/text_medium"
        android:layout_marginBottom="@dimen/padding_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorSurface"
        android:padding="@dimen/padding_medium"
        android:layout_marginBottom="@dimen/padding_medium">

        <Switch
            android:id="@+id/switchDarkMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mode Gelap"
            android:layout_marginBottom="@dimen/padding_small"/>

        <Switch
            android:id="@+id/switchNotifikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifikasi"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keamanan"
        android:textStyle="bold"
        android:textSize="@dimen/text_medium"
        android:layout_marginBottom="@dimen/padding_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorSurface"
        android:padding="@dimen/padding_medium"
        android:layout_marginBottom="@dimen/padding_medium">

        <TextView
            android:id="@+id/btnUbahKataSandi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubah Kata Sandi"
            android:padding="@dimen/padding_small"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorTextSecondary"
            android:layout_marginVertical="@dimen/padding_small"/>

        <TextView
            android:id="@+id/btnKeluarAkun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keluar"
            android:textColor="@color/colorError"
            android:padding="@dimen/padding_small"/>
    </LinearLayout>
</LinearLayout>
